.publishinput-common {
  text-align: center;
  height: 80rpx;
  color: #000000;
  background: #f3f3f3;
  font-size: 32rpx;
  width: 75%;
  border-color: #888888;
  border-style: solid;
  border-top-width: 0px;
  border-right-width: 0px;
  border-bottom-width: 1px;
  border-left-width: 0px;
  border-radius: 0px;
}

.publishinput-focus {
  text-align: center;
  height: 80rpx;
  color: #000000;
  background: #f3f3f3;
  font-size: 32rpx;
  width: 75%;
  border-color:#7a0c6e;
  border-style: solid;
  border-top-width: 0px;
  border-right-width: 0px;
  border-bottom-width: 1px;
  border-left-width: 0px;
  border-radius: 0px;
}

.view-flex {
  position: fixed;
  top: 0px;
  bottom: 0px;
  left: 0px;
  right: 0px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  height: 100%;
}